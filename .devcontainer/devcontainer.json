{
    "name": "Codespaces dbt CLI Starter",
    "extensions": [
        "innoverio.vscode-dbt-power-user"
    ],
    "dockerFile": "Dockerfile",
    "settings": {
        "workbench.editorAssociations": {   
            "*.md": "vscode.markdown.preview.editor",
        },
    },
    "features": {
        "docker-in-docker": {
            "version": "latest",
            "moby": true,
            "dockerDashComposeVersion": "v1"
        }
    },
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "32gb"
    }
}
